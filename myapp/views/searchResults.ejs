<!DOCTYPE html>
<html lang="es">
<%- include('partials/head') %>
<body>

  <%- include('./partials/header') %>

  <div class="container products-wrapper">
    <div class="row">

      <div class="col-12">
        <h2 class="products-title">Resultados de b√∫squeda</h2>
      </div>
      	<div class="container products-wrapper">
		<div class="row">
			<div class="col-12">
			</div>
			<!-- Show the "ultimos" products -->
			 <% if (resultados.length > 0){ %>
				<% for (let i = 0; i < resultados.length; i++) { %> 
					<div id="seeyuh" class="col-12 col-sm-6 col-lg-3"> 
						<section class="product-box"> 
							<a href='/product/detalle/<%= resultados[i].id %>'> 
								<figure class="product-box_image"> 
									<img src="/images/products/<%= resultados[i].imagenArchivo %>" alt=""> 
								</figure> 
								<article class="product-box_data"> 
									<h2><%= resultados[i].nombreProducto %></h2> 
									<p><%= resultados[i].descripcion %></p> 
									<p> <strong> Vendedor/a: </strong> <%= resultados[i].usuario.email %></p> 
									<p> <strong> Comentarios: </strong> <%= resultados[i].comentarios.length %></p>
								</article>
							</a> 
						</section> 
					</div> 
				<% } %> 

			<% }else{ %> 
				 <p> <strong> El producto <%= palabrasBuscadas %>  no fue encontrado. </strong> </p>
				<% } %> 
		</div>
	</div>
    </div>
  </div>

  <%- include('partials/footer') %>
</body>
</html>
