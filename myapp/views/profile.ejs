<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head') %>

  <body>
	<!-- Header -->
	<%- include('partials/headerLogueado') %>
	<!-- /Header -->

    <!-- Datos del usuario -->
    <section class="info-usuario container products-wrapper">
      <div class="row">
        <div class="img-container offset-3 col-2">
          <img src="/images/users/<%= usuariooo.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
        </div>
        <div class="data-container col-6">
          <div class="d-flex align-items-center">
            <h1 class="main-title"><%= usuariooo.nombre %></h1>
            <a class="btn mt-3 ml-4" href="">SEGUIR</a>
          </div>
          <div>
            <ul>
              <li><%= usuariooo.email %></li>
            </ul>
          </div>
        </div>
      </div>
    </section>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Mis productos</h2>
        </div>
      
        <% for (let i = 0; i < proddd.length; i++) { 
          let p = proddd[i]; %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/detalle/<%= p.id %>">
                <img src="/images/products/<%= p.imagenArchivo %>" class="product-box_image" alt="<%= p.nombreProducto %>">
              <article class="product-box_data">
                <h2><%= p.nombreProducto %></h2>
                <p><%= p.descripcion %></p>
                <p>Publicado por: <%= p.usuario_nombre %></p>
              </article>
              </a>
            </section>
          </div>
        <% } %>
      </div>
    </div>
    <%- include('partials/footer') %>
  </body>
</html>