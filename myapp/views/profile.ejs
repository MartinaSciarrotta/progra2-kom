<!DOCTYPE html>
<html lang="es">
  <!-- Include Head -->
  <%- include('partials/head') %>

  <body>
    <!-- Header -->
    <%- include('partials/headerLogueado') %>
    <!-- /Header -->

    <!-- Datos del usuario -->
    <section class="info-usuario container">
      <div class="profile-row">
        
        <!-- Foto -->
        <div class="profile-photo">
          <img src="/images/users/<%= usuariooo.fotoPerfil %>" alt="foto de perfil" class="foto-perfil">
        </div>

        <!-- BotÃ³n seguir -->
        <div class="profile-actions">
          <a class="btn" href="">SEGUIR</a>
        </div>

        <!-- Textos -->
        <div class="profile-info">
          <p class="profile-email"><strong><%= usuariooo.email %></strong></p>
          <p class="profile-count">Cantidad de productos: (<%= proddd.length %>)</p>
        </div>

      </div>
    </section>
    <!-- /Datos del usuario -->

    <!-- Mis productos -->
    <div class="container products-wrapper">
      <div class="row">
        <div class="col-12">
          <h2 class="products-title">Mis productos (<%= proddd.length %>)</h2>
        </div>

        <% for (let i = 0; i < proddd.length; i++) { %>
          <div class="col-12 col-sm-6 col-lg-3">
            <section class="product-box">
              <a href="/product/detalle/<%= proddd[i].id %>">
                <figure class="product-box_image">
                  <img src="/images/products/<%= proddd[i].imagenArchivo %>" alt="">
                </figure>
                <article class="product-box_data">
                  <h2><%= proddd[i].nombreProducto %></h2>
                  <p><%= proddd[i].descripcion %></p>
                  <p><strong>Vendedor/a: </strong> <%= usuariooo.email %></p>
                  <p><strong>Comentarios: </strong> <%= proddd[i].comentarios.length %></p>
                </article>
              </a>
            </section>
          </div>
        <% } %>
      </div>
    </div>

    <%- include('partials/footer') %>
  </body>
</html>
