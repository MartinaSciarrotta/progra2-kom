<!DOCTYPE html>
<html lang="es">
<!-- Include Head -->
<%- include('partials/head') %>

<body>
	<!-- Header -->
	<%- include('partials/header') %>
	<!-- /Header -->
	<!-- Novedades -->
	<div class="container products-wrapper">
		<div class="formulario-box">
			<div class="col-12">
				<h2 class="products-title">Registrate</h2>
			</div>
			<!-- Show the "ultimos" products -->
			<h2 class="col-12">
				<form action="/user/nuevoUsuario" method="POST">
					<% if (error) { %>
						<p style="color: red; padding: 10px; background-color: #ffe6e6; border-radius: 5px; margin-top: 10px;">
							<%= error %>
						</p>
					<% } %>
					<label>Email: </label>
					<input type="email" name="email" required> 

					<label>Usuario: </label>
					<input type="text" name="usuario" required>

					<label>Contrase√±a: </label>
					<input type="password" name="contrasena" required>
					<small style="display: block; color: #666; margin-top: 5px;">Debe tener al menos 3 caracteres</small>

					<label>Foto de perfil: </label>
					<input type="text" name="fotoPerfil" placeholder="ej: default-image.png" value="default-image.png">

					<button type="submit" name="registrarme">Registrarme</button>
				</form>
			</h2>
	</div>
	
	<!-- footer -->
	<%- include('partials/footer') %>
	<!-- /footer -->
</body>

</html>